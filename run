# Uso: ./run up|down|logs|status|clean

case "$1" in
  up)
    echo "ðŸš€ EventRayl iniciando..."
    podman-compose up -d --build
    echo "âœ… Pronto! http://localhost:8000"
    ;;
  down)
    echo "ðŸ›‘ Parando..."
    podman-compose down
    ;;
  logs)
    podman-compose logs -f ${2:-}
    ;;
  status)
    podman-compose ps
    ;;
  clean)
    echo "ðŸ§¹ Limpando..."
    podman-compose down --volumes --remove-orphans
    podman system prune -f
    echo "âœ… Limpo!"
    ;;
  *)
    echo "EventRayl KISS"
    echo "Uso: ./run {up|down|logs|status|clean}"
    ;;
esac
